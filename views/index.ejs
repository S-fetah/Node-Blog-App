<div class="author">
  <h1 class="author_heading">Hi, I am Abdelfetah.</h1>
  <p class="author_bio">I am a full-stack web App Developer</p>
</div>
<img
  src="/images/wallpaper.jpg"
  alt="my profile Pic"
  class="hero-image"
  width="981"
  height="460"
/>
<section class="articles">
  <h2 class="article_heading">Latest Posts</h2>
  <ul class="article-ul">
    <!-- console.log(element) -->
    <% data.forEach(element => { %>

    <li>
      <a href="/post/<%= element._id %> ">
        <span style="display: inline"><%= element.title %></span>
        <span class="article-list_date"
          ><%= element.createdAt.toDateString()%></span
        >
      </a>
    </li>
    <% }) %>

    <!--<li>
      <a href="#">
        <span style="display: inline">Post Title</span>
        <span class="article-list_date">Date</span>
      </a>
    </li> -->
  </ul>

  <% if (nextPage != null) { %>
  <a href="/?page=<%= nextPage %>" class="pagination"> &lt; View Older Posts</a>
  <% } %>
</section>
