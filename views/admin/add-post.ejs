<div class="admin-title">
  <h2>Add Post</h2>
</div>
<form action="/add-post" method="post" class="postForm">
  <label for="title">Title</label>
  <input
    type="text"
    name="title"
    id="title"
    required
    placeholder="Post Title"
  />

  <label for="body">Content</label>
  <textarea name="body" id="body" required cols="50" rows="10"></textarea>

  <input type="submit" value="Add Post" class="btn" />
</form>
